@model HaverDevProject.Models.Supplier

@{
    ViewData["Title"] = "Edit";
}
<div class="col-md-6 col-10 mx-auto">
    <h1><i class="bi bi-caret-right-fill"></i>Supplier</h1>
</div>
<div class="col-md-6 col-10 mx-auto">
    <form asp-action="Edit">
        <div class="card border-2">
            <div class="card-header bg-custom-color mb-2 d-flex justify-content-between">
                <div>
                    <h2 class="m-0">Edit Supplier</h2>
                </div>
                <div class="justify-content-end">
                    <p class="m-0">Fields marked <span class="fw-bold text-danger">*</span> are required.</p>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SupplierId" />
            </div>
            <div class="card-body col-lg-10 col-11 mx-auto">
                <div class="row">  
                    <div class="form-group">
                        <label asp-for="SupplierCode" class="control-label">Code <small data-bs-toggle="tooltip" data-bs-placement="top" data-bs-custom-class="custom-tooltip" data-bs-title="Code to identify the company">(e.g. 700009)</small> <span class="fw-bold text-danger">*</span></label>
                        <input asp-for="SupplierCode" class="form-control" placeholder="Code" readonly/>
                        <span asp-validation-for="SupplierCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SupplierName" class="control-label">Name <small data-bs-toggle="tooltip" data-bs-placement="top" data-bs-custom-class="custom-tooltip" data-bs-title="Legal company name">(e.g. HBC Engineering)</small> <span class="fw-bold text-danger">*</span></label>
                        <input asp-for="SupplierName" class="form-control" placeholder="Name"/>
                        <span asp-validation-for="SupplierName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SupplierContactName" class="control-label">Contact Name <small data-bs-toggle="tooltip" data-bs-placement="top" data-bs-custom-class="custom-tooltip" data-bs-title="Contact name of the company">(e.g. John Smith)</small></label>
                        <input asp-for="SupplierContactName" class="form-control" placeholder="Contact Name"/>
                        <span asp-validation-for="SupplierContactName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SupplierEmail" class="control-label">Email <small data-bs-toggle="tooltip" data-bs-placement="top" data-bs-custom-class="custom-tooltip" data-bs-title="Contact email of the company">(e.g. company@mail.com)</small></label>
                        <input asp-for="SupplierEmail" class="form-control" placeholder="Email" />
                        <span asp-validation-for="SupplierEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SupplierStatus" class="control-label">Status <small data-bs-toggle="tooltip" data-bs-placement="top" data-bs-custom-class="custom-tooltip" data-bs-title="Status of the Supplier">(e.g. Active)</small></label>
                        <select asp-for="SupplierStatus" class="form-control">
                            @if (Model.SupplierStatus)
                            {
                                <option value="true" selected>Active</option>
                                <option value="false">Inactive</option>
                            }
                            else
                            {
                                <option value="true">Active</option>
                                <option value="false" selected>Inactive</option>
                            }
                        </select>
                        <span asp-validation-for="SupplierStatus" class="text-danger"></span>
                    </div>

                </div>
            </div>
            <div class="card-footer">
                <div class="form-group d-flex justify-content-end mt-2">
                    <div>
                        <button type="button" onclick="location.href='@ViewData["returnURL"]'" class="btn custom-btn-color">
                            <i class="bi bi-arrow-90deg-left"></i> Back to the @ViewData["ControllerName"] List
                        </button>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary ms-4">
                            <i class='bi bi-floppy'></i> Save
                        </button>
                    </div>                    
                </div>
            </div>
        </div>
    </form>   
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}
