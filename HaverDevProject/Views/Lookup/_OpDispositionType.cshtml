<br />
<div class="card mb-sm-3" style="min-width: 18rem;">
    <h4 class="card-header" id="OpDispositionType">Operations Manager Disposition Types</h4>
    <div class="card-body">
        @Html.DropDownList("opDispositionTypeId", null, htmlAttributes: new { @size = 6, @class = "form-control" })
    </div>
    <div class="card-footer">
        <a asp-controller="OpDispositionType" asp-action="Create" class="btn text-primary me-2" data-bs-toggle="tooltip" title="Create">
            <i class="bi bi-plus-circle"></i>
        </a>
        <a asp-controller="OpDispositionType" asp-action="Edit" class="btn text-primary linkClick me-2" data-bs-toggle="tooltip" title="Edit">
            <i class="bi bi-pencil-square"></i>
        </a>
        <a asp-controller="OpDispositionType" asp-action="Delete" class="btn text-danger linkClick" data-bs-toggle="tooltip" title="Delete">
            <i class="bi bi-trash3-fill"></i>
        </a>
    </div>
</div>
